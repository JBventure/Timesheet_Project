@model Timesheet_Project.ViewModel.TimesheetModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content">
    <section class="section">
        <div class="section-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-header">Edit Timesheet for @(new DateTime(Model.year, Model.month, 1).ToString("MMMM yyyy"))</h4>
                        </div>
                        <form asp-action="PostTimesheet" method="POST">
                            <input type="hidden" value="@Model.Timesheet.TimesheetId" name="timesheet_id" />
                            @{
                                List<int> allweeks = Model.TimesheetDays.Select(m => m.WeekOfMonth).Distinct().ToList();
                            }
                            <div class="card-body">
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">New Project</label>
                                <div class="col-sm-12 col-md-7">
                                    @{
                                         var project_id = "project_";

                                    }
                                    <select class="@string.Format("form-control pr {0}", project_id)" name="@project_id" asp-items="@(new SelectList(ViewBag.Projects, "ProjectId", "ProjectName"))" onchange="enable_activities(this)">
                                        <option value="">Select Project</option>
                                    </select>
                                </div>
                            </div>
                            </div>
                           @foreach (var i in allweeks)
                            {
                                var week_days = Model.TimesheetDays.Where(e => e.WeekOfMonth == i);
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-responsive table-bordered table-striped" id="tbl_@i" style="min-width: 600px;">
                                            <thead>
                                                <tr>
                                                    @foreach (var day in week_days)
                                                    {
                                                        if (day.Date.Month == Model.month)
                                                        {
                                                            var lorh = ""; @*ArrangeUtil.HolidayOrLeave(day.Date, ViewBag.EmpNumber);*@
                                                            @if (!string.IsNullOrEmpty(lorh))
                                                            {
                                                                <th class="bg-secondary" style="text-align:center" width="10%">@day.DayOfWeek.Substring(0, 3) @day.DayOfMonth [@lorh]</th>
                                                            }
                                                            else
                                                            {
                                                                <th class="bg-secondary" style="text-align:center" width="10%">@day.DayOfWeek.Substring(0, 3) @day.DayOfMonth </th>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <th width="10%"></th>
                                                        }
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var day in week_days)
                                                {
                                                    var row_count = 0;
                                                    row_count += 1;
                                                    var value = "";
                                                    var time_sheet = Model.TimesheetItem.FirstOrDefault(e => e.Date == day.Date);
                                                    if (time_sheet != null)
                                                    {
                                                        value = time_sheet.Duration.ToString();
                                                    }
                                                    if (day.Date.Month == Model.month)
                                                    {
                                                        var read_only = "";
                                                        var name = i + "_" + day.Date.ToString("yyyy-MM-dd") + "_" + row_count;
                                                    <td>
                                                        <div class="input-group">
                                                            <input type="number" @read_only maxlength="2" min="0" max="24" class="form-control small eligible" name="@name" value="@value"> <span class="input-group-btn">
                                                            </span>
                                                        </div>
                                                    </td>
                                                    }
                                                    else
                                                    {
                                                    <td>
                                                        <div class="input-group">
                                                        </div>
                                                    </td>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/timesheet.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}